<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatsActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatsrecycler_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="3dp"
        app:layout_constraintBottom_toTopOf="@+id/messageholder_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/messageholder_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorPrimaryDark"
        android:inputType="textPersonName"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp"
        android:layout_marginEnd="5dp"
        android:text="hjgdj"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/chatsrecycler_rv"
        app:layout_constraintEnd_toStartOf="@+id/send_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginRight="5dp" />



    <ImageView
        android:id="@+id/send_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:src="@drawable/ic_baseline_send_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatsrecycler_rv" />

    <TextView
        android:id="@+id/datetexthoolder_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/coloroption"

        />


</androidx.constraintlayout.widget.ConstraintLayout>